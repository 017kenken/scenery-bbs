<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<%= search_form_for @q do |f| %>
  <%= f.label :palce_cont %>
  <%= f.collection_select(:place_eq, Place.all, :name, :name, include_blank: true, class: "form-control") %>

  <%= f.submit %>
<% end %>

<table>
  <thead>
    <tr>
      <th>place</th>
      <th>Title</th>
      <th>image</th>
      <th>Content</th>
      <th>Auther</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.place %></td>
        <td><%= post.title %></td>
        <td>
          <% if post.images.attached? %>
           <%= image_tag post.images.first, :size => '500x420'%> <br>
          <% end %>
        </td>
        <td><%= sanitize post.content, tags: %w(h1 h2 h3 h4 h5 h6 ul ol li p a img table tr td em br strong div), attributes:  %w(id class href) %></td>
        <td><%= link_to post.auther, users_path(post.user_id) %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'like', likes_path(post) %></td>
        <% if user_signed_in? && post.user_id == current_user.id %>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if user_signed_in? %>
<%= link_to 'New Post', new_post_path %>
<% end %>